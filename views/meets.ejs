<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Meets</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>Meets</h2>
        </div>
        <div class="col">
          <a class="btn btn-success" href="/meets/new" role="button">Create New Meet</a>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date/Time</th>
                <th>Location</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <!-- Displays all meets in a table -->
              <% for (var i = 0; i < meets.length; i++) { %>
                <tr>
                  <td><%= meets[i].id %></td>
                  <td><%= meets[i].name %></td>
                  <td><%= moment(meets[i].date * 1000).format('M/D/yy h:mm A') %></td>
                  <td><%= meets[i].location %></td>
                  <td><a href="/meets/<%= meets[i].id %>">View</a></td>
                  <td><a href="#">Edit</a></td>
                  <td><a href="#" onclick="deleteMeet('<%= meets[i].id %>', event)">Delete</a></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="/scripts/meet.js"></script>

    <!-- Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  </body>
</html>